{
  "name": "es7-node-starter",
  "version": "2.0.0",
  "description": "A Boilerplate application for building REST APIs using express, mongoose in ES7",
  "author": "Brijesh Bhakta <brijeshbhakta30@gmail.com>",
  "main": "server/index.js",
  "private": false,
  "license": "MIT",
  "engines": {
    "node": ">=8.9.3",
    "npm": ">=5.5.1"
  },
  "scripts": {
    "start": "node server",
    "start:debug": "cross-env DEBUG=node-server:* npm start",
    "lint": "esw *.js server config --color",
    "lint:watch": "npm run lint -- --watch",
    "test": "cross-env NODE_ENV=test mocha --timeout 5000 --ui bdd --reporter spec --colors server --recursive --exit",
    "test:watch": "npm test -- --watch",
    "test:coverage": "cross-env NODE_ENV=test istanbul cover ./node_modules/mocha/bin/_mocha -- --ui bdd --reporter spec --colors server --recursive",
    "test:check-coverage": "npm run test:coverage && istanbul check-coverage",
    "precommit": "npm run lint && npm test",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brijeshbhakta30/node-express-mongoose-es7-starter.git"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "mongodb",
    "mongoose",
    "starter",
    "starter code",
    "es6",
    "es7",
    "mocha",
    "REST",
    "API",
    "REST API",
    "boilerplate"
  ],
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "3.5.1",
    "body-parser": "1.18.3",
    "compression": "1.7.2",
    "cookie-parser": "1.4.3",
    "cors": "2.8.4",
    "debug": "3.1.0",
    "dotenv": "6.0.0",
    "express": "4.16.3",
    "express-jwt": "5.3.1",
    "express-validation": "1.0.2",
    "faker": "4.1.0",
    "helmet": "3.12.1",
    "http-status": "1.1.2",
    "joi": "13.3.0",
    "jsonwebtoken": "8.2.2",
    "lodash": "4.17.10",
    "method-override": "2.3.10",
    "mongoose": "5.1.3",
    "morgan": "1.9.0"
  },
  "devDependencies": {
    "@commitlint/cli": "7.0.0",
    "@commitlint/config-conventional": "7.0.1",
    "chai": "4.1.2",
    "cross-env": "5.1.6",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.12.0",
    "eslint-watch": "3.1.5",
    "husky": "0.14.3",
    "istanbul": "1.1.0-alpha.1",
    "mocha": "5.2.0",
    "supertest": "3.1.0",
    "supertest-as-promised": "4.0.2"
  }
}
